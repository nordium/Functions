#include <stdio.h>
#include<stdbool.h>

int prime();
int armstrong();
int perfect();

int main()
{
    int num;
    printf("Enter a number: ");
    scanf("%d",&num);

    if(prime(num))
        printf("\n%d is prime number\n",num);
    else
        printf("\n%d is not prime number\n",num);

    if(armstrong(num))
        printf("%d is armstrong number\n",num);

    else
        printf("%d is not armstrong number\n",num);

    if(perfect(num))
        printf("%d is perfect number\n",num);
    else
        printf("%d is not perfect number\n",num);

}
int prime(int n)
{
    int i;
    bool check=1;
    for(i=2; i<n; i++){
        if(n%2==0){
            check=0;
            break;
        }
    }
    return check;
}

int armstrong(int n)
{
    int digit,temp,sum=0;
    temp=n;
    while(n>0){
        digit=n%10;
        sum+=digit*digit*digit;
        n/=10;
    }

    if(sum==temp)
        return 1;

    return 0;
}

int perfect(int n)
{
    int i,sum=0;
    for(i=1; i<n; i++)
    {
        if(n%i==0)
            sum+=i;
    }

    if(sum==n)
        return 1;

    return 0;
}
